@model IEnumerable<SampleApplication.Contacts.UserContact>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Contacts</h2>

<p>
    @Html.ActionLink("Create New", "Create", new {}, new {@class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastSentTo)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastSentTo)
        </td>
        <td>
            @Html.ActionLink("Message", "Send", "SendToContact", new { id = item.Id }, new { @class = "btn btn-primary btn-inline" })
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new {@class="btn btn-primary btn-inline"})
        </td>
        <td>
            @using (Html.BeginForm("Delete", "Contact"))
            {
                <input type="hidden" name="id" value="@item.Id" />
                <input type="submit" value="Delete" class="btn btn-danger " />
            }
        </td>
    </tr>
}

</table>
